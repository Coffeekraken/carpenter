<section class="row components">
	<div class="gr-12">
		<h1 class="h1">
			{{ components.title }}
		</h1>

		<script>
			function resizeIframe(obj) {
				obj.style.height = obj.contentWindow.document.body.scrollHeight + 40 + 'px';
			}
		</script>
		<iframe width="100%" height="1" srcdoc="
			{{{ components.result }}}
			{{#each components.inject.styles}}
				<link rel=&quot;stylesheet&quot; href={{{this}}} />
			{{/each}}
			<style>
				body { padding: 20px; }
			</style>
		" onload="resizeIframe(this)"></iframe>

		<ul class="tabs">
			{{#if components.viewContent}}
				<li class="tabs__item">
					<a href="#components-view" is="s-activate" group="components" class="active">
						View
					</a>
				</li>
			{{/if}}
			{{#if components.dataContent}}
				<li class="tabs__item">
					<a href="#components-data" is="s-activate" group="components">
						Data
					</a>
				</li>
			{{/if}}
			{{#if components.readmeContent}}
				<li class="tabs__item">
					<a href="#components-readme" is="s-activate" group="components">
						Readme
					</a>
				</li>
			{{/if}}
		</ul>

		{{#if components.viewContent}}
			<div class="tabs__content" id="components-view">
				<pre>
					<code class="lang-html">
						{{ components.viewContent }}
					</code>
				</pre>
			</div>
		{{/if}}
		{{#if components.dataContent}}
			<div class="tabs__content" id="components-data">
				<pre>
					<code class="lang-json">
						{{{ components.dataContent }}}
					</code>
				</pre>
			</div>
		{{/if}}
		{{#if components.readmeContent}}
			<div class="tabs__content tf vr" id="components-readme">
				{{{ components.readmeContent }}}
			</div>
		{{/if}}

	</div>
</section>
